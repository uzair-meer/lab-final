<%- include('./partials/header.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add new Todo</h2>
      <form action="" method="post">
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <!-- data coming from db and passin to edit page -->
          <input type="text" class="form-control" id="title" name="title" />
        </div>

        <div class="mb-3">
          <label for="decrp" class="form-label">Description</label>
          <input type="text" class="form-control" id="descrp" name="descrp" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Todos</h2>
      <%# show a data %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Number</th>
            <th scope="col">title</th>
            <th scope="col">Descrp</th>
          </tr>
        </thead>
        <tbody>
          <% let i=1 %> <% data.forEach((item) =>{ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.title %></td>
            <td><%= item.descrp %></td>
            <td>
              <form
                action="/edit/<%= item._id %>"
                method="get"
                class="d-inline"
              >
                <button type="submit">
                  <i
                    class="fa fa-edit"
                    style="font-size: 24px; color: blue"
                  ></i>
                </button>
              </form>

              <form
                action="/delete/<%= item._id %>"
                method="post"
                class="d-inline"
              >
                <button type="submit">
                  <i
                    class="fa fa-close"
                    style="font-size: 24px; color: red"
                  ></i>
                </button>
              </form>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%- include('./partials/footer.ejs') %>
